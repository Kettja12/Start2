{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "wwwroot/scripts",
    "typeRoots": [
      "ts/types"
    ],
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES2021"
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ],
  "include": [
    "ts/**/*"
  ]
}
