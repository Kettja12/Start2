{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "wwwroot/scripts",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES2021",
    "moduleResolution": "Node"
  },
  "exclude": [
    "wwwroot"
  ],
  "include": [
    "ts/**/*"
  ]
}
